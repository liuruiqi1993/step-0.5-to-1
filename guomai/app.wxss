	font-weight: var(--guo-fw);
	color: var(--guo-text-darker);
} */
.guo-head2 {
	font-size: var(--guo-fs-16);
	line-height: var(--guo-lh-7);
	font-weight: var(--guo-fw);
	color: var(--guo-text-dark2);
}
.guo-desc {
	font-size: var(--guo-fs-13);
	line-height: var(--guo-lh-5);
	color: var(--guo-text-gray3);
}
.guo-price {
	font-weight: var(--guo-fw);
	font-size: 52rpx;
	line-height: var(--guo-lh-7);
	color: var(--guo-text-red);
}
.guo-price i {
	font-size: var(--guo-fs-12);
}
.guo-price-pre {
	font-size: var(--guo-fs-12);
	color: var(--guo-text-gray3);
	text-decoration: line-through;
}
/* 圆角 */
.guo-br-2 {
	overflow: hidden;
	border-radius: var(--guo-br-2);
}
.guo-br-4 {
	overflow: hidden;
	border-radius: var(--guo-br-4);
}
/* 底部按钮 */
.btn-b {
	position: fixed;
	overflow: hidden;
	width: calc(100% - 2*var(--guo-padding-h));
	bottom: var(--guo-padding-h);
	left: var(--guo-padding-h);
	font-size: var(--guo-fs-15);
	color: #fff;
	background-color: var(--guo-text-gold);
	border-radius: var(--guo-br-2);
}
.btn-b-fs {
	font-size: var(--guo-fs-15) !important;
	height: 96rpx !important;
	line-height: 96rpx !important;
}
