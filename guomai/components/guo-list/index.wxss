/* components/guo-list/index.wxss */
.guo-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	padding: 0 var(--guo-padding-h);
}
.guo-item {
	padding-bottom: 25rpx;
	margin-bottom: 40rpx;
	background-color: #fff;
	border-radius: var(--guo-br-4);
	overflow: hidden;
	box-shadow: 0px 4px 16px rgba(38, 38, 38, 0.1);
}
.row {
	display: flex;
	align-items: center;
	padding: 0 30rpx;
}
.fs-row {
	margin: 12rpx 0 5rpx;
}
.space-between {
	justify-content: space-between;
}
.text {
	font-weight: var(--guo-fw);
	font-size: var(--guo-fs-15);
	line-height: var(--guo-lh-5);
	color: var(--guo-text-dark2);
}
.money {
	font-size: var(--guo-fs-15);
	color: var(--guo-text-gold);
}
.money .span {
	font-size: var(--guo-fs-14);
	color: var(--guo-text-gray3);
}
.desc {
	display: inline-block;
	font-size: var(--guo-fs-12);
	color: var(--guo-text-gray1);
}
.read {
	color: var(--guo-text-gray3);
}
