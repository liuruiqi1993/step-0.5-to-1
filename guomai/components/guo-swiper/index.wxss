/* components/guo-swiper/index.wxss */
.swiper-wrap {
	position: relative;
}
.swiper-item {
	width: 100%;
	height: 100%;
	position: relative;
}
.hot {
	position: absolute;
	top: 0;
	right: calc(24rpx + var(--guo-padding-h));
	width: 44rpx;
	height: 46rpx;
}
.indicator {
	position: absolute;
	bottom: 22rpx;
	right: 28rpx;
	display: flex;
	background-color: transparent;
}
.indicator-item {
	display: block;
	width: 12rpx;
	height: 12rpx;
	margin-left: 16rpx;
	border-radius: 2rpx;
	background: rgba(0, 0, 0, .2);
}
.current {
	background-color: #fff;
}
