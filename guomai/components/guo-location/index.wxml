<!--components/guo-location/index.wxml-->
<view class="guo-location">
    <view class="guo-text2 space-between">收礼地址
        <slot></slot>
    </view>
    <view class="location">
        <p class="text text1">
            <span class="label">收件人：</span><span class="span">{{location.contact_name || '未填写'}}</span></p>
        <p class="text text1">
            <span class="label">联系电话：</span><span class="span">{{location.contact_phone || '未填写'}}</span></p>
        <p class="text text2">
            <span class="label">收礼地址：</span><span class="span">{{location.zip}} {{location.full_address || location.address || '未填写'}}</span></p>
    </view>
</view>