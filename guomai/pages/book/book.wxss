/* pages/book/book.wxss */
.wrap {
	padding-bottom: 226rpx;
}
.swiper {
	height: 662rpx;
}
.summary {
	padding: 12rpx var(--guo-padding-h) var(--guo-margin-v);
	border-bottom: var(--guo-margin-v) solid var(--guo-bg);
}
.summary .name {
	font-size: var(--guo-fs-19);
	color: var(--guo-text-dark1);
	margin: 4rpx 0 6rpx;
}
.summary .desc {
	font-size: var(--guo-fs-13);
	color: var(--guo-text-gray5);
}
.flow {
	display: block;
	margin: var(--guo-padding-v) var(--guo-padding-h);
	width: calc(100% - 2*var(--guo-padding-h));
	height: 128rpx;
}
.head {
	border-top: var(--guo-margin-v) solid var(--guo-bg);
	padding: var(--guo-padding-v) var(--guo-padding-h) 0;
}
van-radio-group {
	display: flex;
	overflow-x: auto;
	margin: var(--guo-margin-v) 0 var(--guo-padding-v);
	padding: 0 var(--guo-padding-v);
}
van-radio {
	display: inline-block;
}
.radio {
	overflow: hidden;
	min-width: 216rpx;
	height: 92rpx;
	margin-right: var(--guo-margin-v);
	border-radius: var(--guo-br-2);
	background: var(--guo-bg);
}
.radio .van-radio__icon-wrap {
	display: none;
}
.radio-label {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 100%;
	height: 100%;
	padding: 0 var(--guo-margin-v);
	margin-left: 0 !important;
}
.radio-label .name {
	color: var(--guo-text-dark4);
	font-size: var(--guo-fs-14);
}
.radio-label .num {
	color: var(--guo-text-gray3);
	font-size: var(--guo-fs-12);
}
.radio-active {
	background: var(--guo-bg-gold-light);
}
.radio-active .name {
	color: var(--guo-text-dark2);
}
.radio-active .num {
	color: var(--guo-text-dark3);
}
.detail {
	box-sizing: border-box;
	width: 100vw;
	overflow-x: hidden;
	padding: 0 var(--guo-padding-h) var(--guo-padding-v);
}
.detail image {
	display: block;
	width: 100%;
}
/* 底部结算 */
.bottom-action {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 236rpx;
	background-color: #fff;
}
.bottom-action-item {
	padding: 0 var(--guo-padding-h);
	border-top: 1rpx solid var(--guo-border-light);
}
.count {
	height: 100rpx;
	color: var(--guo-text-gray3);
	font-size: var(--guo-fs-13);
}
.count .span {
	color: var(--guo-text-gray2);
	font-size: var(--guo-fs-14);
}
.stepper {
	display: flex;
	width: 204rpx;
	height: 56rpx;
	border: 2rpx solid var(--guo-border);
}

.stepper .input {
	height: 56rpx;
	flex: 1;
	margin: 0;
	background-color: #fff !important;
	border-left: 2rpx solid var(--guo-border);
	border-right: 2rpx solid var(--guo-border);
}
.stepper .plus,
.stepper .minus {
	height: 56rpx;
	width: 56rpx;
	margin: 0;
	background-color: #fff !important;
}
.total {
	height: 136rpx;
	color: var(--guo-text-gray2);
}
.ready {
	width: 288rpx;
	height: 80rpx;
	font-size: var(--guo-fs-15) !important;
}
/* 提交订单弹窗 */
.pop {
	padding: var(--guo-padding-v) var(--guo-padding-h);
	overflow: hidden;
}
.address {
	flex-direction: column;
	margin-top: var(--guo-margin-v);
	width: 324rpx;
	height: 212rpx;
	background-color: var(--guo-bg-gold-light);
}
.address .icon {
	width: 64rpx;
	height: 64rpx;
}
.address .text1 {
	font-size: var(--guo-fs-14);
	color: var(--guo-text-dark4);
}
.address .text2 {
	display: block;
	height: 14rpx;
	font-size: var(--guo-fs-10);
	color: var(--guo-text-gray3);
}
.service {
	position: fixed;
	width: 108rpx;
	height: 108rpx;
	left: 24rpx;
	bottom: 256rpx;
	border-radius: 50%;
}
