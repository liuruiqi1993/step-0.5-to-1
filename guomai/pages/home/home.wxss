/* pages/home/home.wxss */
.liner {
	background: linear-gradient(180deg, #f6f6f6 0%, #fefefe 90%);
}
van-checkbox-group {
	display: flex;
	flex-wrap: wrap;
	padding: 50rpx 60rpx 20rpx;
}
van-checkc {
	display: inline-block;
}
.check {
	width: 176rpx;
	height: 56rpx;
	border: 2rpx solid #dfdfde;
	margin: 0 45rpx 30rpx 0;
	background: #f9f9f7;
}
.mr {
	margin-right: 0 !important;
}
.check .van-checkbox__icon-wrap {
	display: none;
}
.check-label {
	width: 100%;
	height: 100%;
	margin-left: 0 !important;
	color: var(--guo-text-dark5);
}
.check-active {
	background: var(--guo-bg-gold);
}
